<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.VerifyCompleteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Congratulations!"
        android:textColor="#29c3cb"
        android:textSize="30dp"
        android:fontFamily="@font/mon_semibold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="You have successfully created an "
        android:textColor="#cacaca"
        android:textSize="16dp"
        android:fontFamily="@font/mon_semibold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="account."
        android:textColor="#cacaca"
        android:textSize="16dp"
        android:fontFamily="@font/mon_semibold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="281dp"
        android:src="@drawable/ic_verifydone" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:outlineSpotShadowColor="#29C3CB"
        app:cardElevation="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_getStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Get Started"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/mon_semibold"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>